<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_del"
        style="@style/btn_action_portrait_style"
        android:text="DEL" />

    <Button
        android:id="@+id/btn_dev"
        style="@style/btn_action_portrait_style"
        android:layout_below="@id/btn_del"
        android:text="/" />

    <Button
        android:id="@+id/btn_mults"
        style="@style/btn_action_portrait_style"
        android:layout_below="@id/btn_dev"
        android:text="*" />

    <Button
        android:id="@+id/btn_minus"
        style="@style/btn_action_portrait_style"
        android:layout_below="@id/btn_mults"
        android:text="-" />

    <Button
        android:id="@+id/btn_plus"
        style="@style/btn_action_portrait_style"
        android:layout_below="@id/btn_minus"
        android:text="+" />

    <Button
        android:id="@+id/btn_equals"
        style="@style/btn_action_portrait_style"
        android:layout_below="@id/btn_plus"
        android:text="=" />

</android.support.percent.PercentRelativeLayout>
