<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/digit_panel_color"
    android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_seven"
            style="@style/btn_digit_style"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="7" />

        <Button
            android:id="@+id/btn_eight"
            style="@style/btn_digit_style"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/btn_seven"
            android:layout_toRightOf="@id/btn_seven"
            android:text="8" />

        <Button
            android:id="@+id/btn_nine"
            style="@style/btn_digit_style"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/btn_eight"
            android:layout_toRightOf="@id/btn_eight"
            android:text="9" />

        <Button
            android:id="@+id/btn_four"
            style="@style/btn_digit_style"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/btn_seven"
            android:text="4" />

        <Button
            android:id="@+id/btn_five"
            style="@style/btn_digit_style"
            android:layout_below="@id/btn_eight"
            android:layout_toEndOf="@id/btn_four"
            android:layout_toRightOf="@id/btn_four"
            android:text="5" />

        <Button
            android:id="@+id/btn_six"
            style="@style/btn_digit_style"
            android:layout_below="@id/btn_eight"
            android:layout_toEndOf="@id/btn_five"
            android:layout_toRightOf="@id/btn_five"
            android:text="6" />

        <Button
            android:id="@+id/btn_one"
            style="@style/btn_digit_style"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/btn_four"
            android:text="1" />

        <Button
            android:id="@+id/btn_two"
            style="@style/btn_digit_style"
            android:layout_below="@id/btn_five"
            android:layout_toEndOf="@id/btn_one"
            android:layout_toRightOf="@id/btn_one"
            android:text="2" />

        <Button
            android:id="@+id/btn_three"
            style="@style/btn_digit_style"
            android:layout_below="@id/btn_six"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/btn_two"
            android:layout_toRightOf="@id/btn_two"
            android:text="3" />

        <Button
            android:id="@+id/btn_point"
            style="@style/btn_digit_style"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/btn_one"
            android:text="." />

        <Button
            android:id="@+id/btn_zero"
            style="@style/btn_digit_style"
            android:layout_below="@id/btn_two"
            android:layout_toEndOf="@id/btn_point"
            android:layout_toRightOf="@id/btn_point"
            android:text="0" />

        <View
            style="@style/view_digit_panel_style"
            android:layout_below="@id/btn_three"
            android:layout_toRightOf="@id/btn_zero"/>

    </android.support.percent.PercentRelativeLayout>
