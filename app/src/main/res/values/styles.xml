<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_base_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:onClick">buttonClick</item>
    </style>

    <style name="btn_digit_style" parent="btn_base_style">
        <item name="layout_widthPercent">33%</item>
        <item name="layout_heightPercent">25%</item>
        <item name="android:background">@drawable/bt_digit_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_action_portrait_style" parent="btn_base_style">
        <item name="layout_widthPercent">100%</item>
        <item name="layout_heightPercent">16.66%</item>
        <item name="android:background">@drawable/bt_action_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_action_land_style" parent="btn_base_style">
        <item name="layout_widthPercent">50%</item>
        <item name="layout_heightPercent">25%</item>
        <item name="android:background">@drawable/bt_action_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_formule_style" parent="btn_base_style">
        <item name="layout_widthPercent">33%</item>
        <item name="layout_heightPercent">20%</item>
        <item name="android:background">@drawable/btn_formula_bg</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="land_big_panel_style">
        <item name="layout_widthPercent">40%</item>
        <item name="layout_heightPercent">100%</item>
    </style>

    <style name="hor_scroll_style">
        <item name="layout_heightPercent">30%</item>
        <item name="layout_widthPercent">100%</item>
    </style>

    <style name="field_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

</resources>
