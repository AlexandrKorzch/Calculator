<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="app:layout_widthPercent">33%</item>
        <item name="app:layout_heightPercent">25%</item>
        <item name="app:layout_marginTopPercent">0dp</item>
        <item name="app:layout_marginLeftPercent">0dp</item>
    </style>

    <style name="btn_second_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
