<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_base_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_digit_style" parent="btn_base_style">
        <item name="layout_widthPercent">33%</item>
        <item name="layout_heightPercent">25%</item>
        <item name="android:background">@color/digit_panel_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_action_portrait_style" parent="btn_base_style">
        <item name="layout_widthPercent">100%</item>
        <item name="layout_heightPercent">16.66%</item>
        <item name="android:background">@color/color_action_bt</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_action_land_style" parent="btn_base_style">
        <item name="layout_widthPercent">50%</item>
        <item name="layout_heightPercent">25%</item>
        <item name="android:background">@color/color_action_bt</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_formule_style" parent="btn_base_style">
        <item name="layout_widthPercent">33%</item>
        <item name="layout_heightPercent">20%</item>
        <item name="android:background">@color/color_right_panel</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="land_big_panel_style">
        <item name="layout_widthPercent">40%</item>
        <item name="layout_heightPercent">100%</item>
    </style>

</resources>
